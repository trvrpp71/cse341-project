        <h1 class="main-title">My Book List</h1>

        <% if (books.length > 0 ) { %>
            <ul class="main-list__ul">
            <% for (let book of books) { %> 
                <li class="main-list__item"><%= book.title %> by <%= book.author %> | $<%= book.price %></li>
            <% } %>
            </ul>
        <% } else { %>
            <h1>there are no books in the list</h1>
        <% } %>
        
